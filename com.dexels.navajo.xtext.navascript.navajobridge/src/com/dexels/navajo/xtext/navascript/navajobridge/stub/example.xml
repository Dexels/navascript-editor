<!-- Navajo adapter -->
<map>
	<tagname>navajomap</tagname>
	<object>com.dexels.navajo.adapter.NavajoMap</object>
	<description>This adapter can be used to call other Navajo services,
		either synchronously,
		asynchronously or scheduled
	</description>
	<values>
		<value name="trigger" type="string" required="false"
			direction="in" />
		<value name="sendThrough" type="boolean" required="false"
			direction="in" />
		<value name="server" type="string" required="false"
			direction="in" />
		<value name="serverTimeout" type="integer" required="false"
			direction="in" />
		<value name="id" type="string" required="false" direction="in" />
		<value name="block" type="boolean" required="false"
			direction="in" />
		<value name="lowPriority" type="boolean" required="false"
			direction="in" />
		<value name="username" type="string" required="false"
			direction="in" />
		<value name="dropTokenMessage" type="boolean" required="false"
			direction="in" />
		<value name="password" type="string" required="false"
			direction="in" />
		<value name="tenant" type="string" required="false"
			direction="in" />
		<value name="locale" type="string" required="false"
			direction="in" />
		<value name="resource" type="string" required="false"
			direction="in" />
		<value name="useCurrentOutDoc" type="boolean" required="false"
			direction="in" />
		<value name="useCurrentMessages" type="string" required="false"
			direction="in" />
		<value name="copyInputMessages" type="string" required="false"
			direction="in" />
		<value name="messagePointer" type="string" required="false"
			direction="in" />
		<value name="selectionPointer" type="string" required="false"
			direction="in" />
		<value name="message" map="messagemap" required="false"
			direction="out" />
		<value name="messages" map="messagemap []" required="false"
			direction="out" />
	</values>
	<methods>
		<!-- Creates a new property -->
		<method name="createproperty">
			<param name="name" field="propertyName" type="string"
				required="true" />
			<param name="type" field="propertyType" type="string"
				required="false" />
			<param name="value" field="property" type="any" required="true" />
		</method>
	</methods>
</map>
	